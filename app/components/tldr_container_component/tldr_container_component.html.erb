<% if current_page.data["wip"] %>
  <%= content_for :banner do %>
    <div class="bg-white/50 py-1.5 px-3 shadow-sm text-xs font-semibold text-neutral-500">This article is still a work in progress, if you'd like to contribute, see the github repo</div>
  <% end %>
<% end %>

<div class="flex flex-col space-y-4">
  <h1 class="text-4xl font-black"><%= current_page.data["title"] %></h1>

  <div class="py-2 pr-2.5 pl-1 bg-teal-200 border border-teal-500 rounded-xl text-teal-800 font-semibold w-fit text-sm tracking-normal">
    <span class="bg-teal-500 text-white font-black rounded-lg py-1 px-2 mr-2">tl;dr</span>
    <%= tldr %>
  </div>

  <div id="tldr-body">
    <%= content %>
  </div>
</div>
